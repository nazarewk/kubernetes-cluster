# Based on https://coreos.com/etcd/docs/latest/v2/clustering.html
[Service]
Environment=ETCD_NAME={{ node.name }}
Environment=ETCD_ADVERTISE_CLIENT_URLS=http://{{ node.ip }}:2379
Environment=ETCD_LISTEN_PEER_URLS=http://{{ node.ip }}:2380
Environment=ETCD_LISTEN_CLIENT_URLS=http://{{ node.ip }}:2379,http://127.0.0.1:2379
Environment=ETCD_INITIAL_ADVERTISE_PEER_URLS=http://{{ node.ip }}:2380
Environment=ETCD_INITIAL_CLUSTER_TOKEN={{ ETCD_INITIAL_CLUSTER_TOKEN }}
Environment=ETCD_INITIAL_CLUSTER={{ ETCD_INITIAL_CLUSTER }}
Environment=ETCD_INITIAL_CLUSTER_STATE=new