#!/bin/sh
cd $(dirname "$(readlink -f "$0")")

kubectl_command () {
for name in $1; do
  cat  <<EOF | ./kubectl $2 -f -
apiVersion: v1
kind: Namespace
metadata:
  name: ${name}
  labels:
    name: ${name}

---

apiVersion: v1
kind: ServiceAccount
metadata:
  name: ${name}
  namespace: ${name}

---

kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: ${name}-admin-binding
  namespace: ${name}
roleRef:
  kind: ClusterRole
  name: admin
  apiGroup: rbac.authorization.k8s.io
subjects:
- kind: ServiceAccount
  name: ${name}
EOF
  echo Tokens:
  ./student-tokens ${name}
done
}

case $1 in
  ""|list)
    ./kubectl get namespace
    ;;
  *)
    kubectl_command "$@"
    ;;
esac